<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <TextView
        android:id="@+id/labelBarcodeLength"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="20dp"
        android:lines="1"
        android:maxLines="1"
        android:singleLine="true"
        android:text="Vonalkód hossza" />

    <TextView
        android:id="@+id/valueBarcodeLength"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="10dp"
        android:lines="1"
        android:maxLines="1"
        android:singleLine="true"
        android:text="XXX"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/labelBarcodeType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="20dp"
        android:lines="1"
        android:maxLines="1"
        android:singleLine="true"
        android:text="Vonalkód típusa" />

    <TextView
        android:id="@+id/valueBarcodeType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="10dp"
        android:lines="1"
        android:maxLines="1"
        android:singleLine="true"
        android:text="XXX"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/labelBarcode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="20dp"
        android:lines="1"
        android:maxLines="1"
        android:singleLine="true"
        android:text="Vonalkód" />

    <TextView
        android:id="@+id/valueBarcode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="10dp"
        android:lines="1"
        android:maxLines="1"
        android:singleLine="true"
        android:text="XXX"
        android:textSize="20dp" />
</LinearLayout>